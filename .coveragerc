[run]
# 커버리지 측정 대상
source = .

# 제외 경로
omit =
    */venv/*
    */tests/*
    */test/*
    */backups/*
    */archive/*
    */__pycache__/*
    */site-packages/*
    setup.py
    */scripts/*
    */examples/*
    */docs/*

# 브랜치 커버리지 측정
branch = True

[report]
# 정밀도
precision = 2

# 커버리지 리포트에서 제외할 라인
exclude_lines =
    # 표준 제외
    pragma: no cover

    # 디버깅 코드
    def __repr__
    def __str__

    # 추상 메서드
    raise AssertionError
    raise NotImplementedError
    @abstractmethod

    # main 블록
    if __name__ == .__main__.:

    # Type checking
    if TYPE_CHECKING:
    if typing.TYPE_CHECKING:

    # Pass 문
    pass

    # Ellipsis
    \.\.\.

# 누락된 라인 표시
show_missing = True

# 부분 브랜치 표시
partial_branches =
    pragma: no branch

[html]
# HTML 리포트 디렉토리
directory = htmlcov

# 파일명
title = Kiwoom Trading Coverage Report

[xml]
# XML 리포트 (CI용)
output = coverage.xml
